// .eslintrc.json
{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["import"],
  "rules": {
    "import/no-unused-modules": [
      "error",
      {
        "unusedExports": true,
        "missingExports": true,
        "ignoreExports": [
          "**/app/**/route.ts",
          "**/app/**/page.tsx",
          "**/app/**/layout.tsx",
          "**/app/**/loading.tsx"
        ]
      }
    ],
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "react-hooks/exhaustive-deps": "error"
  }
}
